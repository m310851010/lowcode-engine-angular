/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "noImplicitThis": true,
    "preserveValueImports": true,
    "jsxImportSource": "react",

    "paths": {
      "lowcode-utils": [
        "dist/lowcode-utils/lowcode-utils",
        "dist/lowcode-utils",
        "projects/lowcode-utils/src/public-api"
      ],
      "ngx-renderer": [
        "dist/ngx-renderer/ngx-renderer",
        "dist/ngx-renderer",
        "projects/ngx-renderer/src/public-api"
      ],
      "ngx-simulator-renderer": [
        "dist/ngx-simulator-renderer/ngx-simulator-renderer",
        "dist/ngx-simulator-renderer",
        "projects/ngx-simulator-renderer/src/public-api"
      ]
    },
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2017",
    "module": "es2020",
    "lib": [
      "es2020",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
